<div class="modal fade" id="bookBorrowModal" tabindex="-1" role="dialog" aria-labelledby="bookBorrowModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="Books/Borrow" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ödünç Verme</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label for="borrowed-by" class="col-form-label">Ödünç Alan:</label>
                        <input type="text" class="form-control" name="BorrowedBy" id="borrowed-by">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Dönüş Tarihi:</label>
                        <input type="text" class="form-control" name="ReturnDate" id="return-date">
                    </div>
              
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <input type="hidden" class="form-control" name="BookId" id="bookId">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
            </form>
        </div>
    </div>
</div>